<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forbes_black"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Forbes Logo -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:src="@drawable/forbes_logo_png"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:contentDescription="Forbes Logo"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingTop="4dp"
                app:tabTextColor="#666666"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="2dp"
                app:tabTextAppearance="@style/TabTextAppearance"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabInlineLabel="false"
                app:tabIconTint="@color/tab_icon_color_selector"
                app:tabPadding="4dp"
                app:tabPaddingTop="8dp"
                app:tabPaddingBottom="8dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/latest_png"
                    android:text="LATEST"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/magazine"
                    android:text="MAGAZINE"/>
                    
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/bookmark"
                    android:text="BOOKMARKS"/>

            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Tap Your Phone's Settings\nTo Turn On Notifications For\nBreaking News And Exclusives."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="24dp"/>

            <LinearLayout
                android:id="@+id/latest_stories_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/breaking_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breaking News"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/breaking_news_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="24dp"/>

                <TextView
                    android:id="@+id/latest_stories_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latest Stories"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/latest_stories_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmarks_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bookmarked_stories_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bookmarked Stories"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:id="@+id/no_bookmarks_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No bookmarked stories yet"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bookmarked_stories_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/magazine_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Magazine content will be added here -->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 